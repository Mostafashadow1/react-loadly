{
  "name": "react-loadly",
  "version": "1.0.0",
  "description": "A professional React loaders package with high-performance, customizable loader components",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": {
      "import": "./dist/styles.css",
      "require": "./dist/styles.css"
    }
  },
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "build:js": "rollup -c",
    "build:types": "tsc --emitDeclarationOnly",
    "build:watch": "rollup -c -w",
    "clean": "rimraf dist",
    "build": "npm run clean && npm run build:js && npm run build:types",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "dev": "vite",
    "dev:vite": "vite",
    "serve": "vite",
    "preview": "vite preview",
    "prepare": "npm run build",
    "production": "pnpm i && pnpm lint:fix && pnpm build && pnpm pack"
  },
  "keywords": [
    "react",
    "loaders",
    "loading",
    "spinner",
    "animation",
    "typescript",
    "nextjs",
    "components",
    "ui",
    "performance"
  ],
  "author": "Mostafa Mohamed",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mostafashadow1/react-loadly.git"
  },
  "bugs": {
    "url": "https://github.com/Mostafashadow1/react-loadly/issues"
  },
  "homepage": "https://github.com/Mostafashadow1/react-loadly#readme",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^24.3.1",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.6.1",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-typescript-paths": "^1.5.0",
    "ts-jest": "^29.1.1",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "install": "^0.13.0",
    "npm": "^11.6.0"
  }
}
